{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "VITE_PROD_API_BASE_URL": "https://your-backend-url.vercel.app",
    "VITE_NODE_ENV": "production"
  },
  "github": {
    "silent": true
  }
}
